<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.EditProfileFragment"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/mLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPic"

                    android:layout_width="@dimen/_54sdp"
                    android:layout_height="@dimen/_54sdp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_usericon" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/mCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_25sdp"
                    android:background="@color/white"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <LinearLayout
                        android:id="@+id/mEditCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtName"

                                style="@style/txtMonReg"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:backgroundTint="@color/text_hint_color"
                                android:hint="@string/first_name"
                                android:textColorHint="@color/colorGray"
                                android:inputType="textPersonName"
                                android:textColor="@color/text_font_color" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtMobile"

                                style="@style/txtMonReg"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:backgroundTint="@color/text_hint_color"
                                android:hint="@string/enter_phone_number"
                                android:inputType="number"
                                android:textColorHint="@color/colorGray"
                                android:textColor="@color/text_font_color" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtEmail"

                                style="@style/txtMonReg"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:backgroundTint="@color/text_hint_color"
                                android:hint="@string/email"
                                android:textColorHint="@color/colorGray"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/text_font_color" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtGender"

                                style="@style/txtMonReg"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:backgroundTint="@color/text_hint_color"
                                android:hint="@string/gender"
                                android:textColorHint="@color/colorGray"
                                android:inputType="text"
                                android:textColor="@color/text_font_color" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtQualification"

                                style="@style/txtMonReg"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:backgroundTint="@color/text_hint_color"
                                android:hint="Qualification"
                                android:textColorHint="@color/colorGray"
                                android:inputType="text"
                                android:textColor="@color/text_font_color" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtSpecialization"

                                style="@style/txtMonReg"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:backgroundTint="@color/text_hint_color"
                                android:hint="@string/specialization"
                                android:textColorHint="@color/colorGray"
                                android:inputType="text"
                                android:textColor="@color/text_font_color" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                               android:id="@+id/edtExperience"

                                style="@style/txtMonReg"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:backgroundTint="@color/text_hint_color"
                                android:hint="@string/years_of_experience"
                                android:inputType="text"
                                android:textColorHint="@color/colorGray"
                                android:textColor="@color/text_font_color" />
                        </FrameLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginBTN"
                    style="@style/button"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:text="@string/create_account"
                    />
            </LinearLayout>


        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
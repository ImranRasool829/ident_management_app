<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_52sdp"
            android:layout_gravity="center"
            android:background="@color/background_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTimePA"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:minHeight="@dimen/_12sdp"
                    android:text="10:00:am"
                    android:textColor="@color/text_font_color"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDatePA"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:minHeight="@dimen/_12sdp"
                    android:text="10-01-2023"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llitems"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="start|center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNamePA"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:minHeight="@dimen/_12sdp"
                    android:text="@string/marvin_mckinney"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDoctorNamePA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Dr. Sharma"
                    android:textSize="@dimen/sp_10"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/mCVBGStatusPA"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_24sdp"
                    app:cardBackgroundColor="@color/light_green"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/tvStatusPA"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/done"
                        android:textColor="@color/text_font_color"
                        android:textSize="@dimen/sp_10" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgStatusPic"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:src="@drawable/ic_circle_image" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
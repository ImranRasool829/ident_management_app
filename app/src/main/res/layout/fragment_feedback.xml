<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".setting.FeedbackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/txtMonReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/please_send_your_inputs_feedback_queries_here"
                android:textStyle="normal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mCardViewPV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/corner_feedback_text_border"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/incEditText"
                        style="@style/editMonsReg"
                        android:background="@color/white"
                        android:layout_height="@dimen/_140sdp"
                        android:maxLength="100"
                        android:textSize="@dimen/_12sdp" />


                </FrameLayout>


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvSavePrescreption"
                style="@style/button"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:text="@string/save" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
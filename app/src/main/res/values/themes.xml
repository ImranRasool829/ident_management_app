<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDentMngt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/text_font_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="txtMonReg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="txtMonSemiBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="txtMonMed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="paddingStart">@dimen/_8sdp</item>
        <item name="paddingEnd">@dimen/_8sdp</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="txtMonBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!--    Dialog Theme-->
    <style name="mytheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/teal_200</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>


    <style name="btnMonSemiBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/edit_button_background_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/edit_button_background_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
    </style>

    <style name="editMonsReg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="editTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <!--        <item name="cardElevation">@dimen/_6sdp</item>-->
        <!--        <item name="elevation">@dimen/_2sdp</item>-->
        <!--        <item name="cardMaxElevation">@dimen/_6sdp</item>-->


    </style>


</resources>